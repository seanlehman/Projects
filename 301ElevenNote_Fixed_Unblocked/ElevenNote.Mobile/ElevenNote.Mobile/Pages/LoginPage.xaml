<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElevenNote.Mobile.Pages.LoginPage">
  <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
    <Label Text="Eleven Note Xamarin" HorizontalOptions="CenterAndExpand"></Label>
    <Label x:Name="lblErrorMessage" Text="Please login."></Label>
    <Label Text="Username" HorizontalOptions="FillAndExpand"></Label>
    <Entry Keyboard="Email" x:Name="tbxUsername" Text="{Binding Username}" HorizontalOptions="FillAndExpand"></Entry>
    <Label Text="Password" HorizontalOptions="FillAndExpand"></Label>
    <Entry x:Name="tbxPassword" IsPassword="true" Text="{Binding Password}" HorizontalOptions="FillAndExpand"></Entry>
    <Button x:Name="btnLogin" Text="Login" HorizontalOptions="FillAndExpand" Clicked="btnLogin_Clicked"></Button>
  </StackLayout>
</ContentPage>